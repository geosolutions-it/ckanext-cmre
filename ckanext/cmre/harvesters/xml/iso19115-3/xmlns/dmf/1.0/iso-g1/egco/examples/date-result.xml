<?xml version="1.0" encoding="UTF-8"?>
<gmd:DQ_QuantitativeResult xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.isotc211.org/2005/gmd http://standards.iso.org/itff/PubliclyAvailableStandards/ISO_19139_Schemas/gmd/gmd.xsd">
	<!--	ISO 19103 Date is implemented in XML as gco:Date_Type (date without time) or xs:dateTime (when expressing a date and time). 
			Here is an example of result expressed as a date without time. -->
	<gmd:valueType>
		<!-- NOTE:	The effective location of the XML Schema is not very stable. A URN is used instead of a URL to prevent any change.
							E.g. urn:dgiwg:metadata:dmf:1.0:xmlns:isotc211:gco:1.0:Date_Type currently corresponds to 
							../gco/basicTypes.xsd#Date_Type -->
		<gco:RecordType xlink:href="urn:dgiwg:metadata:dmf:1.0:xmlns:isotc211:gco:1.0:Date_Type">Date</gco:RecordType>
	</gmd:valueType>
	<!-- The unit can be defaulted to unity for dates -->
	<gmd:valueUnit xlink:href="http://www.opengis.net/def/uom/OGC/1.0/unit"/>
	<!-- Encoding of a record containing a Date value. A Year (e.g. 2013) andr a Year+Month (e.g. 2013-05) are also valid values -->
	<gmd:value>
		<gco:Record xsi:type="gco:Date_Type">2013-05-27</gco:Record>
	</gmd:value>
</gmd:DQ_QuantitativeResult>
